package com.vpn.backend;

import java.io.*;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.*;

@WebServlet("/fetch-training-logs")
public class FetchTrainingLogsServlet extends HttpServlet {

    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("application/json");
        PrintWriter out = response.getWriter();

        try (Connection conn = DBUtil.getConnection()) {
            String sql = "SELECT username, topic, score, remarks, attempted_at FROM training_logs ORDER BY attempted_at DESC";
            PreparedStatement stmt = conn.prepareStatement(sql);
            ResultSet rs = stmt.executeQuery();

            StringBuilder json = new StringBuilder();
            json.append("[");

            boolean first = true;
            while (rs.next()) {
                if (!first) json.append(",");
                json.append("{")
                    .append("\"username\":\"").append(rs.getString("username")).append("\",")
                    .append("\"topic\":\"").append(rs.getString("topic")).append("\",")
                    .append("\"score\":").append(rs.getInt("score")).append(",")
                    .append("\"remarks\":\"").append(rs.getString("remarks")).append("\",")
                    .append("\"attempted_at\":\"").append(rs.getTimestamp("attempted_at")).append("\"")
                    .append("}");
                first = false;
            }

            json.append("]");
            out.print(json.toString());

        } catch (Exception e) {
            e.printStackTrace();
            out.print("{\"status\":\"error\", \"message\":\"" + e.getMessage() + "\"}");
        }
    }
}
