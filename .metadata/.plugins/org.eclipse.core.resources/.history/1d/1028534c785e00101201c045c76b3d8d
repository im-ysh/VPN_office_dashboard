package com.vpn.backend;

import java.io.*;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/submit-training")
public class FetchTrainingLogServlet extends HttpServlet {

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        // Set response type
        response.setContentType("application/json");
        PrintWriter out = response.getWriter();

        // Read inputs from request
        String username = request.getParameter("username");
        String topic = request.getParameter("topic");
        String scoreStr = request.getParameter("score");
        String remarks = request.getParameter("remarks");

        // Validate inputs
        if (username == null || topic == null || scoreStr == null || username.isEmpty() || topic.isEmpty()) {
            out.print("{\"status\":\"error\", \"message\":\"Username, topic and score are required\"}");
            return;
        }

        try (Connection conn = DBUtil.getConnection()) {
            int score = Integer.parseInt(scoreStr);

            String sql = "INSERT INTO training_logs (username, topic, score, remarks) VALUES (?, ?, ?, ?)";
            PreparedStatement stmt = conn.prepareStatement(sql);
            stmt.setString(1, username);
            stmt.setString(2, topic);
            stmt.setInt(3, score);
            stmt.setString(4, remarks);

            int rows = stmt.executeUpdate();

            if (rows > 0) {
                out.print("{\"status\":\"success\", \"message\":\"Training log submitted\"}");
            } else {
                out.print("{\"status\":\"fail\", \"message\":\"Insert failed\"}");
            }

        } catch (Exception e) {
            e.printStackTrace();
            out.print("{\"status\":\"error\", \"message\":\"" + e.getMessage() + "\"}");
        }
    }

    @Override
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("application/json");
        PrintWriter out = response.getWriter();
        out.print("{\"status\":\"success\", \"message\":\"GET working for TrainingLogServlet\"}");
    }
}
