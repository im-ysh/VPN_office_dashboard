<body>
    <!-- Login Page -->
    <div id="loginPage" class="login-container">
        <div class="logo">
            <h1>OpenVPN</h1>
            <p>Dashboard</p>
        </div>
        
        <div id="errorMessage" class="error-message" style="display: none;"></div>
        <div id="successMessage" class="success-message" style="display: none;"></div>
        
        <div class="auth-tabs">
            <div class="auth-tab active" data-tab="password">Login</div>
            <div class="auth-tab" data-tab="register">Register</div>
            <div class="auth-tab" data-tab="guest">Guest</div>
        </div>
        
        <!-- Password Login Form -->
        <form id="passwordForm" class="auth-content active" onsubmit="handleLogin(event)">
            <div class="input-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required autocomplete="username">
            </div>
            
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required autocomplete="current-password">
            </div>
            
            <button type="submit" class="login-btn">Sign In</button>
            
            <div class="forgot-password">
                <a href="#" onclick="showForgotPassword()">Forgot your password?</a>
            </div>
        </form>
        
        <!-- Registration Form -->
        <form id="registerForm" class="auth-content" onsubmit="handleRegistration(event)">
            <div class="input-group">
                <label for="reg_username">Username</label>
                <input type="text" id="reg_username" name="username" required autocomplete="username">
            </div>
            
            <div class="input-group">
                <label for="reg_email">Email</label>
                <input type="email" id="reg_email" name="email" required autocomplete="email">
            </div>
            
            <div class="input-group">
                <label for="reg_password">Password</label>
                <input type="password" id="reg_password" name="password" required autocomplete="new-password">
            </div>
            
            <div class="input-group">
                <label for="reg_confirm_password">Confirm Password</label>
                <input type="password" id="reg_confirm_password" name="confirmPassword" required autocomplete="new-password">
            </div>
            
            <button type="submit" class="login-btn">Create Account</button>
        </form>
        
        <!-- Guest Access Form -->
        <div id="guestForm" class="auth-content">
            <div class="guest-info">
                <h3 style="color: #2c3e50; margin-bottom: 1rem; text-align: center;">Free Guest Access</h3>
                <p style="color: #6c757d; text-align: center; margin-bottom: 1.5rem;">
                    Get instant limited access to our VPN service. No registration required!
                </p>
                
                <div class="guest-features">
                    <div class="feature-item">
                        <span class="feature-icon">✓</span>
                        <span>Limited Free Access</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">✓</span>
                        <span>Basic Server Locations</span>
                    </div>
                    <div class="feature-item">
                        <span class="feature-icon">✓</span>
                        <span>Full Encryption</span>
                    </div>
                </div>
                
                <button type="button" class="login-btn" onclick="handleGuestAccess()">
                    Start Free VPN Now
                </button>
                
                <div class="guest-note">
                    <small>Register for additional features and preferences.</small>
                </div>
            </div>
        </div>
        
        <div class="vpn-status">
            <div class="status-indicator"></div>
            <span>VPN Service Status: <strong>Offline</strong></span>
        </div>
    </div>

    <!-- Dashboard Page (initially hidden) -->
    <div id="dashboardPage" class="dashboard-container" style="display: none;">
        <div class="header">
            <h1>Welcome, <span id="userDisplay"></span></h1>
            <button class="logout-btn" onclick="logout()">Logout</button>
        </div>
        
        <div class="section">
            <h2>Device Log</h2>
            <button class="action-btn" onclick="postDeviceLog()">Post Device Log</button>
        </div>
        
        <div class="section">
            <h2>User Logs</h2>
            <button class="action-btn" onclick="fetchUserLogs()">Fetch User Logs</button>
            <div class="log-display" id="userLogs">No logs fetched yet</div>
        </div>
        
        <div class="section">
            <h2>Training Logs</h2>
            <button class="action-btn" onclick="fetchTrainingLogs()">Fetch Training Logs</button>
            <div class="log-display" id="trainingLogs">No logs fetched yet</div>
        </div>
        
        <div class="section">
            <h2>Audit Logs</h2>
            <button class="action-btn" onclick="fetchAuditLogs()">Fetch Audit Logs</button>
            <div class="log-display" id="auditLogs">No logs fetched yet</div>
        </div>
    </div>

    <script>
        const baseURL = "http://100.90.249.20:8080/vpn-backend";
        let currentPage = window.location.pathname.includes('dashboard.html') ? 'dashboard' : 'login';

        // Initialize the correct page
        document.addEventListener('DOMContentLoaded', function() {
            if (currentPage === 'dashboard') {
                showDashboard();
            } else {
                showLogin();
            }
            checkVPNStatus();
            setInterval(checkVPNStatus, 30000);
        });

        function showDashboard() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('dashboardPage').style.display = 'block';
            const username = localStorage.getItem("username") || "guest";
            document.getElementById("userDisplay").textContent = username;
        }

        function showLogin() {
            document.getElementById('loginPage').style.display = 'block';
            document.getElementById('dashboardPage').style.display = 'none';
        }

        function switchTab(tabName) {
            document.querySelectorAll('.auth-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('.auth-content').forEach(content => {
                content.classList.remove('active');
            });
            
            document.querySelector(`.auth-tab[data-tab="${tabName}"]`).classList.add('active');
            document.getElementById(`${tabName}Form`).classList.add('active');
            
            clearMessages();
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            document.getElementById('successMessage').style.display = 'none';
        }

        function showSuccess(message) {
            const successDiv = document.getElementById('successMessage');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            document.getElementById('errorMessage').style.display = 'none';
        }

        function clearMessages() {
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }

        async function handleLogin(event) {
        	  event.preventDefault();
        	  const username = document.getElementById('username').value;
        	  const password = document.getElementById('password').value;

        	  try {
        	    const response = await fetch("http://100.90.249.20:8080/vpn-backend/login", {
        	      method: 'POST',
        	      headers: {
        	        'Content-Type': 'application/x-www-form-urlencoded', // ← Must match Servlet's expected format
        	      },
        	      body: `username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}`,
        	      credentials: 'include' // Only if using cookies/sessions
        	    });

        	    const data = await response.json();
        	    
        	    if (data.status === "success") {
        	      alert("Login successful! Role: " + data.role);
        	      window.location.href = "dashboard.html";
        	    } else {
        	      alert("Login failed: " + (data.message || "Unknown error"));
        	    }
        	  } catch (error) {
        	    console.error("Fetch error:", error);
        	    alert("Network error. Check console for details.");
        	  }
        	}            
            button.textContent = 'Sign In';
            button.disabled = false;
        }

        async function handleRegistration(event) {
            event.preventDefault();
            const username = document.getElementById('reg_username').value;
            const email = document.getElementById('reg_email').value;
            const password = document.getElementById('reg_password').value;
            const confirmPassword = document.getElementById('reg_confirm_password').value;
            
            if (!username || !email || !password || !confirmPassword) {
                return showError('Please fill in all fields');
            }
            
            if (password !== confirmPassword) {
                return showError('Passwords do not match');
            }
            
            if (password.length < 6) {
                return showError('Password must be at least 6 characters');
            }
            
            const button = event.target.querySelector('button[type="submit"]');
            button.textContent = 'Creating Account...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${baseURL}/register`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}&email=${encodeURIComponent(email)}`
                });
                
                const data = await response.json();
                
                if (data.status === "success") {
                    showSuccess("Registration successful! You can now login.");
                    switchTab('password');
                    document.getElementById('username').value = username;
                    document.getElementById('password').value = '';
                } else {
                    showError(data.message || "Registration failed");
                }
            } catch (error) {
                showError("Server error. Please try again.");
                console.error("Registration error:", error);
            }
            
            button.textContent = 'Create Account';
            button.disabled = false;
        }

        function handleGuestAccess() {
            const button = event.target;
            button.textContent = 'Connecting...';
            button.disabled = true;
            
            showSuccess('Free Guest Access Granted! Redirecting...');
            localStorage.setItem("guest", "true");
            
            setTimeout(() => {
                window.location.href = "dashboard.html";
            }, 1500);
        }

        function showForgotPassword() {
            const email = prompt('Enter your email address:');
            if (email) {
                showSuccess('Password reset instructions sent to ' + email);
            }
        }

        function checkVPNStatus() {
            const statusElement = document.querySelector('.vpn-status');
            const statusText = document.querySelector('.vpn-status strong');
            
            fetch(`${baseURL}/status`).then(res => {
                if (res.ok) return res.json();
                throw new Error('Status check failed');
            }).then(data => {
                if (data.status === 'online') {
                    statusElement.classList.add('connected');
                    statusText.textContent = 'Online';
                } else {
                    statusElement.classList.remove('connected');
                    statusText.textContent = 'Offline';
                }
            }).catch(() => {
                statusElement.classList.remove('connected');
                statusText.textContent = 'Offline';
            });
        }

        // Dashboard Functions
        async function fetchUserLogs() {
            const username = localStorage.getItem("username") || "guest";
            const button = event.target;
            button.textContent = 'Fetching...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${baseURL}/fetch-user-logs?username=${encodeURIComponent(username)}`);
                const data = await response.json();
                document.getElementById("userLogs").innerText = JSON.stringify(data, null, 2);
            } catch (error) {
                document.getElementById("userLogs").innerText = "Error fetching user logs";
                console.error("Fetch user logs error:", error);
            }
            
            button.textContent = 'Fetch User Logs';
            button.disabled = false;
        }

        async function fetchTrainingLogs() {
            const username = localStorage.getItem("username") || "guest";
            const button = event.target;
            button.textContent = 'Fetching...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${baseURL}/fetch-training-logs?username=${encodeURIComponent(username)}`);
                const data = await response.json();
                document.getElementById("trainingLogs").innerText = JSON.stringify(data, null, 2);
            } catch (error) {
                document.getElementById("trainingLogs").innerText = "Error fetching training logs";
                console.error("Fetch training logs error:", error);
            }
            
            button.textContent = 'Fetch Training Logs';
            button.disabled = false;
        }

        async function fetchAuditLogs() {
            const button = event.target;
            button.textContent = 'Fetching...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${baseURL}/fetch-audit-logs`);
                const data = await response.json();
                document.getElementById("auditLogs").innerText = JSON.stringify(data, null, 2);
            } catch (error) {
                document.getElementById("auditLogs").innerText = "Error fetching audit logs";
                console.error("Fetch audit logs error:", error);
            }
            
            button.textContent = 'Fetch Audit Logs';
            button.disabled = false;
        }

        async function postDeviceLog() {
            const username = localStorage.getItem("username") || "guest";
            const log = prompt("Enter log data:");
            
            if (!log) return;
            
            const button = event.target;
            button.textContent = 'Posting...';
            button.disabled = true;
            
            try {
                const response = await fetch(`${baseURL}/logs`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `username=${encodeURIComponent(username)}&log_data=${encodeURIComponent(log)}`
                });
                
                const data = await response.json();
                alert(data.message || "Log posted successfully");
            } catch (error) {
                alert("Error posting log");
                console.error("Post device log error:", error);
            }
            
            button.textContent = 'Post Device Log';
            button.disabled = false;
        }

        function logout() {
            localStorage.clear();
            window.location.href = "index.html";
        }
    </script>
</body>
</html>