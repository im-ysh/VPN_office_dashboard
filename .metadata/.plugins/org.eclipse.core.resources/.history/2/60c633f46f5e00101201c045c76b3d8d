package com.vpn.backend;

import java.io.*;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.http.*;

public class FetchLogsServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        response.setContentType("application/json");
        PrintWriter out = response.getWriter();

        try (Connection conn = DBUtil.getConnection()) {
            String sql = "SELECT * FROM vpn_logs ORDER BY timestamp DESC LIMIT 100";
            PreparedStatement stmt = conn.prepareStatement(sql);
            ResultSet rs = stmt.executeQuery();

            StringBuilder logsJson = new StringBuilder();
            logsJson.append("[");
            boolean first = true;
            while (rs.next()) {
                if (!first) logsJson.append(",");
                logsJson.append("{\"username\":\"" + rs.getString("username") +
                        "\", \"log_data\":\"" + rs.getString("log_data") +
                        "\", \"ip_address\":\"" + rs.getString("ip_address") +
                        "\", \"timestamp\":\"" + rs.getTimestamp("timestamp") + "\"}");
                first = false;
            }
            logsJson.append("]");
            out.print(logsJson);
        } catch (Exception e) {
            out.print("{\"status\":\"error\", \"message\":\"" + e.getMessage() + "\"}");
        }
    }
}
